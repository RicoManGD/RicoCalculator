<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="0"
        android:gravity="right"
        android:padding="10dp"
        android:textSize="45dp"
        android:id="@+id/display"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_c"
            android:text="C"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_pm"
            android:text="+/-"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_remaining"
            android:text="%"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_divide"
            android:text="÷"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_multiply"
            android:text="×"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_minus"
            android:text="—"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_add"
            android:text="+"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_dot"
            android:text="."
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_equal"
            android:text="="
            android:textSize="30dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="onClick"/>




    </LinearLayout>





</LinearLayout>